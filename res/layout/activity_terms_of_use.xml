<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >

   

    <TextView
        android:id="@+id/termsOfUseHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Terms Of Use"
        android:background="@drawable/mainnavbar2x" 
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/termsOfUseCloseButton"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/termsOfUseHeader"
        android:layout_alignBottom="@+id/termsOfUseHeader"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:background="@drawable/mainrightbutton"
        android:gravity="center"
        android:text="Close"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/termsOfUseHtml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/termsOfUseHeader" />

</RelativeLayout>